<dialect xmlns="http://www.thymeleaf.org/extras/dialect"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.thymeleaf.org/extras/dialect
	                    http://www.thymeleaf.org/xsd/thymeleaf-extras-dialect-2.1.xsd"
	prefix="sec"
	namespace-uri="http://www.thymeleaf.org/extras/login-mode"
	namespace-strict="false"
	class="com.arcvideo.pgcliveplatformserver.security.dialect.LoginModeDialect">

	<attribute-processor
		name="mode"
		class="com.arcvideo.pgcliveplatformserver.security.dialect.LoginModeElementProcessor">
		<documentation
			reference="Thymeleaf login mode module readme"/>
	</attribute-processor>

	<expression-object name="securityConfigStrategy" class="com.arcvideo.pgcliveplatformserver.security.SecurityConfigStrategy"/>

</dialect>
